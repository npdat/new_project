= form_for @boarding_document do |f|
  - if @boarding_document.errors.any?
    #error_explanation
      %h2= "#{pluralize(@boarding_document.errors.count, "error")} prohibited this boarding_document from being saved:"
      %ul
        - @boarding_document.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :gender
    = f.check_box :gender
  .field
    = f.label :position
    = f.text_field :position
  .field
    = f.label :birthday
    = f.datetime_select :birthday
  .field
    = f.label :birthday_place
    = f.datetime_select :birthday_place
  .field
    = f.label :passport
    = f.text_field :passport
  .field
    = f.label :Nationality
    = f.collection_select :port_id, Port.all, :id, :name
  .field
    = f.label :flight_ticket
    = f.text_area :flight_ticket
  .field
    = f.label :is_flight
    = f.check_box :is_flight
  .field
    = f.label :time_arrive
    = f.datetime_select :time_arrive
  .field
    = f.label :status_id
    = f.number_field :status_id
  .field
    = f.label :user
    = f.text_field :user_id
  .field
    = f.label :remark
    = f.text_area :remark
  .actions
    = f.submit 'Save'
