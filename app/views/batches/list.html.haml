:javascript
  $(document).ready(function () {

    $('#radioBtn a').on('click', function () {
      var sel = $(this).data('title');
      var tog = $(this).data('toggle');
      //$('#' + tog).prop('value', sel);

      $('a[data-toggle="' + tog + '"]').not('[data-title="' + sel + '"]').removeClass('active').addClass('notActive');
      $('a[data-toggle="' + tog + '"][data-title="' + sel + '"]').removeClass('notActive').addClass('active');
    });

    $('.panel-heading span.clickable').click();
    $('.panel div.clickable').click();
    $('div[data-toggle="collapse"]')[0].click();
  });

.container-fluid
  .btn-group.pull-right#radioBtn
    %a#cd-radio-1.btn.btn-primary.btn-sm.active{"data-toggle"=>"fun", "data-title"=>"Y", :onclick=>"filter_all()"} All
    %a#cd-radio-2.btn.btn-primary.btn-sm.notActive{"data-toggle"=>"fun", "data-title"=>"X", :onclick=>"filter_batch()"} Batch
    %a#cd-radio-3.btn.btn-primary.btn-sm.notActive{"data-toggle"=>"fun", "data-title"=>"N", :onclick=>"filter_single()"} Single
  %br
  .container-fluid
    .panel-body.navbar-static-top
      #no-more-tables
        %table#table-batch.table.table-striped.table-fixed{:cellspacing=>'0', :width=>"100%"}
          %thead
            %tr
              %th{:width=>"20%"} Name
              %th{:width=>"15%"} gender
              %th{:width=>"15%"} position
              %th{:width=>"15%"} birthday
              %th{:width=>"15%"} birthday_place
              %th{:width=>"20%"} passport
          %tbody
    - @batches.each do |batches|
      - if batches.length == 1
        = render 'show_single', batches: batches
      - else
        = render 'show_batches', batches: batches
